<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" styleClass="scene" stylesheets="@/stylesheets/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.LobbyController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="680.0" prefWidth="1240.0">
      <children>
         <Label fx:id="title" alignment="CENTER" contentDisplay="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="1240.0" style="-fx-text-fill: black;" text="Lobby">
            <font>
               <Font name="System Bold" size="72.0" />
            </font>
         </Label>
         <Button contentDisplay="TOP" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#openPopup" prefHeight="80.0" prefWidth="80.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" textAlignment="CENTER">
            <graphic>
               <ImageView pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@/images/back.png" />
                  </image>
               </ImageView>
            </graphic></Button>
         <HBox alignment="TOP_CENTER" layoutY="111.0" prefHeight="550.0" prefWidth="1240.0">
            <children>
               <GridPane prefHeight="515.0" prefWidth="1217.0">
                 <columnConstraints>
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                   <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" />
                 </columnConstraints>
                 <rowConstraints>
                   <RowConstraints minHeight="10.0" prefHeight="24.0" vgrow="SOMETIMES" />
                   <RowConstraints minHeight="0.0" vgrow="SOMETIMES" />
                   <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                 </rowConstraints>
                  <children>
                     <Label fx:id="chatTitle" prefHeight="45.0" prefWidth="187.0" text="Chat:" GridPane.halignment="LEFT">
                        <font>
                           <Font name="System Bold" size="24.0" />
                        </font>
                        <GridPane.margin>
                           <Insets />
                        </GridPane.margin>
                     </Label>
                     <Label fx:id="playerCount" prefHeight="44.0" prefWidth="375.0" text="Players (1):" GridPane.columnIndex="2">
                        <font>
                           <Font name="System Bold" size="24.0" />
                        </font>
                     </Label>
                     <ScrollPane hbarPolicy="NEVER" prefHeight="416.0" prefWidth="467.0" styleClass="scrollPane" GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <content>
                           <TextFlow focusTraversable="true" prefHeight="520.0" prefWidth="456.0">
                              <children>
                                 <Label fx:id="playersLeft" alignment="TOP_CENTER" prefHeight="520.0" prefWidth="227.0" text="" textAlignment="CENTER">
                                    <font>
                                       <Font size="24.0" />
                                    </font>
                                 </Label>
                                 <Label fx:id="playersRight" alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefHeight="520.0" prefWidth="227.0" text="" textAlignment="CENTER">
                                    <font>
                                       <Font size="24.0" />
                                    </font>
                                 </Label>
                              </children>
                           </TextFlow>
                        </content>
                     </ScrollPane>
                     <ScrollPane fx:id="chatArea" prefHeight="400.0" prefWidth="700.0" styleClass="scrollPane" vvalue="1.0" GridPane.rowIndex="1">
                        <content>
                           <Label fx:id="chatText" alignment="BOTTOM_LEFT" wrapText="true">
                              <font>
                                 <Font size="24.0" />
                              </font>
                              <padding>
                                 <Insets left="10.0" />
                              </padding>
                           </Label>
                        </content>
                     </ScrollPane>
                     <TextField fx:id="chatInput" onAction="#onEnter" prefHeight="25.0" prefWidth="169.0" promptText="Enter your message...." style="-fx-background: white;" GridPane.rowIndex="2">
                        <font>
                           <Font size="24.0" />
                        </font>
                     </TextField>
                     <Button fx:id="startButton" mnemonicParsing="false" onAction="#start" prefHeight="53.0" prefWidth="467.0" styleClass="confirmButton" text="Start Game" textFill="#009a19" GridPane.columnIndex="2" GridPane.rowIndex="2">
                        <font>
                           <Font size="24.0" />
                        </font>
                     </Button>
                  </children>
               </GridPane>
            </children>
         </HBox>
         <!-- Include the popup at top of everything -->
         <fx:include fx:id="popup" source="/client/scenes/Popup.fxml" />
      </children>
    </AnchorPane>
</VBox>
