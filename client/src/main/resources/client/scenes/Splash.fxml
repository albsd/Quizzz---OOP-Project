<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.SplashController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane prefHeight="682.0" prefWidth="1240.0">
        <children>
            <Button fx:id="helpButton" layoutX="7.0" layoutY="5.0" mnemonicParsing="false" onAction="#help" prefHeight="47.0" prefWidth="82.0" text="Help">
            <font>
               <Font name="System Bold" size="18.0" />
            </font></Button>
            <Button fx:id="exitButton" layoutX="1207.0" layoutY="9.0" mnemonicParsing="false" onAction="#exitApp" prefHeight="39.0" prefWidth="38.0" text="X" />
            <Button fx:id="singleplayerButton" layoutX="89.0" layoutY="529.0" mnemonicParsing="false" onAction="#singleGame" prefHeight="97.0" prefWidth="207.0" text="Singleplayer">
            <font>
               <Font size="24.0" />
            </font></Button>
            <Button fx:id="multiplayerButton" layoutX="968.0" layoutY="520.0" mnemonicParsing="false" onAction="#lobby" prefHeight="98.0" prefWidth="209.0" text="Multiplayer">
            <font>
               <Font size="24.0" />
            </font></Button>
            <Button fx:id="leaderBoardButton" layoutX="543.0" layoutY="520.0" mnemonicParsing="false" onAction="#leaderBoard" prefHeight="98.0" prefWidth="208.0" text="Leaderboard">
            <font>
               <Font size="24.0" />
            </font></Button>

            <Label fx:id="exitLabel" layoutX="1178.0" layoutY="55.0" prefHeight="29.0" prefWidth="82.0" text="Exit game" textAlignment="CENTER">
            <font>
               <Font size="18.0" />
            </font></Label>
            <Label fx:id="title" layoutX="312.0" layoutY="55.0" prefHeight="169.0" prefWidth="636.0" text="Energy Quizzz" textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="96.0" />
                </font>
            </Label>
            <TextField fx:id="userField" alignment="CENTER" layoutX="502.0" layoutY="326.0" prefHeight="78.0" prefWidth="290.0" text="Input nickname">
            <font>
               <Font size="36.0" />
            </font></TextField>
        </children>
    </AnchorPane>
<!--    <ScrollPane prefHeight="200.0" prefWidth="200.0" />-->
</VBox>
